@* Criar a view de jogador *@
@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">
<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
<!-- MAIN -->
<main>
    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a asp-area=" " asp-controller="Login" asp-action="Index">
                Login
            </a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")'>
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>
                
                <select class="campo-entrada" type="number" id="id-equipe">
                    <option value="0">Selecione o ID da sua equipe:</option>
                    @foreach (Equipe Equipe in ViewBag.Equipe)
                    {
                        <option value="@Equipe.IdEquipe">@Equipe.IdEquipe</option>
                    }
                </select>
                @* <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:"> *@
                <select class="campo-entrada" name="IdEquipe" id="equipe">
                    <option value="0">Selecione uma Equipe</option>
                    @foreach (Equipe Equipe in ViewBag.Equipe)
                    {
                        <option value="@Equipe.IdEquipe">@Equipe.Nome</option>
                    }
                </select>

                <input class="campo-entrada" type="text" name="Nome" required placeholder="Digite o nome do Jogador:">
                <input class="campo-entrada" type="text" name="Email" placeholder="Digite o Email do Jogador:">
                <input class="campo-entrada" type="password" name="Senha" placeholder="Digite a Senha:">
                <button type="submit">Cadastrar</button>
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

             <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                    <tr>
                        <td>@jogador.IdEquipe</td>
                        <td>@jogador.Nome</td>
                        <td>@jogador.Email</td>
                        <td>
                            <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="imagem da @jogador.Equipe.Nome" width="50px">
                        </td>
                        <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                        <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador"><iconify-icon icon="mdi:clipboard-edit-outline" style="color: #f9aa01;" width="20" height="22"></iconify-icon></a>
                        </td>
                    </tr>
                    }
                    
                </tbody>
            </table>
            
        }

    </section>
</main>

