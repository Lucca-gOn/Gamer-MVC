@model Jogador

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/header-footer.css">
<link rel="stylesheet" href="~/css/jogadores.css">
<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>

<h1>Edição de Jogadores</h1>
@if (ViewBag.UserName == null)
{
    <a asp-area=" " asp-controller="Login" asp-action="Index">
        Login
    </a>
}
else
{
    <section class="container-grid cadastro-equipes">

        <form class="frm-cad-equipe" method="post" action='@Url.Action("Atualizar")'>
            <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">
            
            <div class="cadequipe-titulo">
                <h1>Atualizar Jogadores</h1>
                <hr>
            </div>

            <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">
            @* <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:"> *@
            <select class="campo-entrada" name="IdEquipe" id="IdEquipe">
                <option value="0">Selecione uma Equipe:</option>

                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                    @if (equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
                    {
                        <option value="@equipe.IdEquipe" selected>@equipe.Nome</option>
                    }
                    else
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }
                }
            </select>

            <input class="campo-entrada" type="text" name="Nome" required placeholder="Digite o nome do Jogador:">
            <input class="campo-entrada" type="text" name="Email" placeholder="Digite o Email do Jogador:">
            <input class="campo-entrada" type="password" name="Senha" placeholder="Digite a Senha:">
            <button type="submit">Atualizar</button>
        </form>
    </section>
}

<form method="post" action="@Url.Action("Atualizar")">

    <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

    <label for="">Nome</label>
    <input type="text" name="Nome" value="@ViewBag.Jogador.Nome">

    <label for="">Email</label>
    <input type="email" name="Email" value="@ViewBag.Jogador.Email">

    <label for="">Senha</label>
    <input type="password" name="Senha" value="@ViewBag.Jogador.Senha">

    <label for="">Equipe</label>
    <select name="IdEquipe" id="IdEquipe">
        <option value="0">Selecione uma opção: </option>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            @if (equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
            {
                <option value="@equipe.IdEquipe" selected>@equipe.Nome</option>
            }
            else
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }
        }
    </select>

    <button type="submit">Atualizar</button>

</form>